include layout
include userNavbar
include vote
.row.clearfix
    .col-md-5.column.col-md-offset-1
        h3
            strong Restaurants
        ul.list-unstyled.list-group
            //each loop to iterate through restaurant list
            each d in data
                a.restaurant-name(href='/restaurantListings/#{d.name}')
                    li#rest.restaurant.list-group-item.scaled=d.name

    .col-md-5.column
        h3
            strong Menu
        ul.list-unstyled.list-group
            //each loop to iterate through menu list
            each i in data
                if i.name == name
                    each d in i.items
                        li#rest.menuItem.list-group-item.scaled= d.itemName
                            span.pull-right.price $#{d.price}
                    .row
                        .col-md-12
    button#submitButton.btn.btn-primary.col-md-offset-10(type='button', data-toggle='modal', data-target='#myModal') Submit
    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal')
                        span(aria-hidden='true') Ã—
                        span.sr-only Close
                    h4#myModalLabel.modal-title Thank you for voting!
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close

include footer
    h6#restaurant-name.hide #{name}
    h6#timer-val.hide #{time}
    h6#thisUserHasVoted.hide #{thisUser.hasVoted}
    h6#thisUserEmail.hide #{thisUser.email}
