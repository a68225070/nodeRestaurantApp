doctype
html
    head(lang='en')
        meta(charset='UTF-8')
        title
        script(src='http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.1.js')
        link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', type='text/css')
        script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    body
        #accordion5.panel-group
            .panel.panel-default
                .panel-heading
                    h4.panel-title
                        a(data-toggle='collapse', data-parent='#accordion5', href='#collapseHeaven')
                            | GET USER NAME
                #collapseHeaven.panel-collapse.collapse.in
                    .panel-body
                        .form-group
                            label Change User name
                            input.form-control(type='text', name='newUser', placeholder='Enter new user name')
                        .form-group
                            label Update email
                            input.form-control(type='email', name='newUserEmail', placeholder='Enter email')
                        .form-group
                            label Set new password
                            input.form-control(type='password', name='newUserPassword', placeholder='Password')
                        button.btn.btn-default(type='submit') Update User
                        button.btn.btn-default(type='submit') Delete user
