doctype
html(lang='en')
head
    meta(charset='UTF-8')
    title Menu
    link(rel='stylesheet', type='text/css', href='public/stylesheets/bootstrap.css')
    script(src='http://code.jquery.com/jquery-1.11.0.min.js')
    script(src='public/javascripts/menupage.js')
    link(rel='icon', type='image/ico', href='public/images/cross.ico')
  body
    .navbar.navbar-default
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-responsive-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Feed.me
      .navbar-collapse.collapse.navbar-responsive-collapse
        ul.nav.navbar-nav
          li
            a(href='adminSelect') Dashboard
          li
            a(href='/restaurantListings') Voting
          li.active
            a(href='/menupage') Order
          li
            a(href='/orderHistory') History
          li
            a(href='/adduser') User Management
          li
            a(href='/editRest') Restaurant Management
   
        ul.nav.navbar-nav.navbar-right
          li
            a#signOut(href='/signout') Sign Out
    .row
      .list-group.col-md-6.col-md-offset-3
        each item in data
          a.name.list-group-item.disabled(href='#') #{item.name}
          each d in data2
            if d.name == item.name
              each x in d.items
                a.list-group-item.item(href='#')
                    span.itemName #{x.itemName}
                    span.pull-right.price $#{x.price}
    .row
      textarea.col-md-6.col-md-offset-3#txt_name(input-type='text', rows='3', placeholder='Special Requests')
    button.submit.btn.btn-success.col-md-offset-8(type='button', style='margin-top: 20px') Submit
    img#icon(src='public/images/cross.ico')
    #wrap
      #main.container.clear-top
    footer.footer
    script(src='http://code.jquery.com/jquery.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
    script(src='js/authlogin.js')
